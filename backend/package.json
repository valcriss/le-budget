{
  "name": "backend",
  "version": "1.0.0",
  "description": "Personal budgeting API built with NestJS, Fastify, and Prisma",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/src/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/main.ts",
    "start:debug": "node --inspect-brk -r ts-node/register -r tsconfig-paths/register src/main.ts",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:create-init": "prisma migrate reset && prisma migrate dev --name init",
    "prisma:init": "npm run prisma:generate && npm run prisma:migrate",
    "prisma:seed": "ts-node --project tsconfig.json prisma/seed.ts",
    "test": "c8 --reporter=text --reporter=lcov ts-node --project tsconfig.test.json test/budget-calculation.spec.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^7.0.4",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^1.10.2",
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.20",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-fastify": "^10.4.20",
    "@nestjs/swagger": "^7.4.2",
    "@prisma/client": "^6.18.0",
    "argon2": "^0.41.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "fastify": "^4.29.1",
    "joi": "^17.13.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@types/node": "^20.19.24",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "prisma": "^6.18.0",
    "rimraf": "^5.0.10",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "c8": "^9.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
